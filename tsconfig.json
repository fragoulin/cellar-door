{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false
}
